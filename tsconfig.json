{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "target": "es2020",
    "lib": [
      "es2015",
      "es2020"
   ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules", 
    "lib"
  ]
}
